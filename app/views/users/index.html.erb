<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>
<li class="search-nav">ユーザー検索
  <%= form_tag(root_path, method: :get) do %>
    <div class="input-group">
      <%= search_field_tag "q", params[:q], class: "form-control", placeholder: "ユーザー名を入力してください。" %>
      <span class="input-group-btn">
        <%= submit_tag "検索", class: "btn btn-default" %>
      </span>
    </div>
  <% end %>
</li>
<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>